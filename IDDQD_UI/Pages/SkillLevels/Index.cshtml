            <div class="row">

                <div class="col-lg-12 col-md-12 col-12 d-flex flex-column justify-content-center align-items-center">
                        <div>

                            <p>
                                <h4 style="color:white;">Skill Levels</h4>
                                @*<a style="color:white;" asp-page="Create">Create New</a>*@
                            </p>
                            <table class="table color-light">
                                <thead>
                                    <tr>
                                        <th class="text-white" scope="col">ID</th>
                                        <th class="text-white" scope="col">Name</th>
                                        <th class="text-white" scope="col">Description</th>
                                        <th class="text-white" scope="col">Cartesian Index</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var skilllevel in Model.SkillLevelsList)
                                    {
