     <!-- HERO -->
    <section class="hero hero-bg d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-10 col-12 d-flex flex-column justify-content-center align-items-center">
                    <div class="hero-text">

                        <div class="container p-2">
                            <a href="./Page1" class="nav-link contact">Create your Competency!</a>
                        </div>
                        <div class="text-center">
                            <table class="table">
                                <thead>
                                    <tr class="text-white">
                                        <th scope="col">Id</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var competency in Model.CompetencyList)
                                    {
                                        <tr>
                                            <th scope="row">@competency.Id</th>
                                            <td>@competency.Name</td>
                                            <td>@competency.Description</td>
                                        </tr>
                                        { count++; }
                                    }
                                </tbody>
                            </table><br>
                        </div>
                        <br>
                        <br>

                    </div>
                </div>
            </div>

            <div class="text-right">
                @* <a class="btn btn-link text-light font-weight-bold font-size: 150%" href="./Index" role="button">Back to List</a> *@
