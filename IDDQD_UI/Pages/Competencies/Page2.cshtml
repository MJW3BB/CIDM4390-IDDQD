     <!-- HERO -->
     <section class="hero hero-bg d-flex justify-content-center align-items-center">
        <div class="container">
            <div class="row">

                <div class="col-lg-6 col-md-10 col-12 d-flex flex-column justify-content-center align-items-center">
                    <div class="hero-text">

                        <h2 class="text-white">Select Dispositions - Step 2</h2>
                        <p class="font-weight-bolder text-white">Select Dispositions for the competency.</p>
                        <hr>
                        <div class="row">
                            <div style="display: none;" class="col-sm-4">
                                <div>
                                    <p class="font-weight-bolder" type="hidden">Session variable inputs</p>        
                                </div>
                                <div type="hidden" class="card" style="width: 18rem;">
                                    <ul class="list-group list-group-flush">
                                        <li type="hidden" class="list-group-item">Competency Builder JSON</li>
                                        <li type="hidden" class="list-group-item">@HttpContext.Session.GetString(IDDQD.Pages.Competencies.Page1Model.SerializedCompetencyJSONKey)</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-sm-12">
                                <div>
                                    <p class="text-white"><strong>Competency Name</strong>: @Model.CompetencyName</p>
                                    <p class="text-white"><strong>Competency Description</strong>: @Model.CompetencyDescription</p>
                                </div>
                                <div>
                                    <form method="post">
                                        <div class="form-group row">
                                            <table class="table table-sm">
                                                <thead>
                                                    <tr>
                                                        <th class="text-black" scope="col">ID</th>
                                                        <th class="text-black" scope="col">Name</th>
                                                        <th class="text-black" scope="col">Description</th>
                                                        <th class="text-black" scope="col">Category</th>
                                                        <th class="text-black" scope="col">Discipline</th>
                                                        <th class="text-black" scope="col">Select</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    @* https://www.learnrazorpages.com/razor-pages/forms/checkboxes#collections-of-complex-objects *@
                                                    @for (var i = 0; i < Model.DispositionDisplayList.Count(); i++)
                                                    {
                                                        <tr>
                                                            <th scope="row">
                                                                <input type="hidden" 
                                                                    asp-for="DispositionDisplayList[i].Id" />
                                                                @Model.DispositionDisplayList[i].Id
                                                            </th>
                                                            <td>
                                                                <input type="hidden" 
                                                                    asp-for="DispositionDisplayList[i].Name" />
                                                                @Model.DispositionDisplayList[i].Name
                                                            </td>
                                                            <td class="text-black">@Model.DispositionDisplayList[i].Description</td>
                                                            <td class="text-black">@Model.DispositionDisplayList[i].Category</td>
                                                            <td class="text-black">@Model.DispositionDisplayList[i].Discipline</td>
                                                            <td class="text-black"><input asp-for="DispositionDisplayList[i].Selected"></td>
                                                        </tr>
                                                    }
                                                </tbody>
                                            </table>
                                        </div>        
                                        <div class="form-group row">
                                            @* These are important to take advantage of the BindProperty *@
                                            <input type="hidden" asp-for="CompetencyName">
                                            <input type="hidden" asp-for="CompetencyDescription">
                                            <input type="hidden" asp-for="DispositionIndicies">
                                            <button name="submit" type="submit" class="btn btn-danger">
                                                Next
                                            </button>
                                        </div>        
                                    </form>
                                    <br>
                                    <br>
                                    <br>
                                </div>        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-right">
                <a class="btn btn-success" href="/Index" role="button">Back to Site</a>
            </div>
        </div>
     </section>

