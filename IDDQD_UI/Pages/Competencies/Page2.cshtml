@model IDDQD.Pages.Competencies.Page2Model

@{
    ViewData["Title"] = "Competency Wizard Page 2";
}

@* @using Microsoft.AspNetCore.Http *@

@{
    Layout=null;
}

    <title>Competency Curricula 2020</title>

<head>

@* <h1>Disposition Index</h1> *@

<!--

