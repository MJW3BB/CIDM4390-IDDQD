     <!-- HERO -->
     <section class="hero hero-bg d-flex justify-content-center align-items-center">
        <div class="container" text-color="white">
            <div class="row">

                <div class="col-lg-6 col-md-10 col-12 d-flex flex-column justify-content-center align-items-center">
                    <div class="hero-text">

                        @* <p>
                            <a style ="color:white;" asp-page="Create">Create New</a>
                        </p> *@
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-white" 150%scope="col">ID</th>
                                    <th class="text-white" 150%scope="col">Name</th>
                                    <th class="text-white" 150%scope="col">Description</th>
                                    <th class="text-white" 150%scope="col">Cartesian Index</th>
                                    <th class="text-white" 150%scope="col">Semiotic Index</th>
                                    <th class="text-white" 150%scope="col">Etymology</th>                
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var ke in Model.KnowledgeElementsList)
                                {
                                    <tr class="text-white">
                                        <th scope="row">@ke.Id</th>
                                        <td>@ke.Name</td>
                                        <td>@ke.Description</td>
                                        <td>@ke.CartesianIndex</td>
                                        <td>@ke.SemioticIndex</td>                    
                                        <td>@ke.Etymology</td>
                                    </tr>
                                    { count++; }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="text-right">
                @* <a class="btn btn-link text-dark font-weight-bold font-size: 150%" href="./Index" role="button" style="font-size: 10px";>Back to List</a> *@
                <a class="btn btn-link text-dark font-weight-bold font-size: 150%" href="/Index" role="button">Back to Site</a>
            </div>
        </div>
